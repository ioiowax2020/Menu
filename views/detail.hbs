<div class="d-flex justify-content-center align-items-center mt-5">
  <a href="/" class="btn btn-outline-secondary">back</a>
</div>
<h1 class="mb-1 restaurant-show-title">{{menu.name}}</h1>
<div class="showPic">
  <div class="container" id="showId">
    <div class="row">
      <div class="col-12 col-md-10 mx-auto">

        <p class="mb-1">
          <span class="text-secondary">
            <i class="fas fa-utensils pr-2"></i>
            類別：
          </span>
          {{menu.category}}
        </p>

        <p class="mb-1">
          <span class="text-secondary">
            <i class="fas fa-map-marker-alt pr-2"></i>
            地址：
          </span>
          {{menu.location}}
          <a href="https://goo.gl/maps/V9mKwVJ4s5v" class="text-secondary" target="_blank">
            <i class="fas fa-location-arrow pr-2 fa-xs"></i>
          </a>
        </p>

        <p class="mb-1">
          <span class="text-secondary">
            <i class="fas fa-mobile-alt pr-2"></i>
            電話：
          </span>
          {{menu.phone}}
        </p>

        <p class="m-5">
          {{menu.description}}
        </p>


        <img class="showPic rounded mx-auto d-block mb-4 w-100" src=" {{menu.image}}" alt=" {{menu.name}}"
          style="max-width: 600px;">

      </div>
    </div>
  </div>
</div>
</div>