<div class="d-flex justify-content-center align-items-center mt-5">
  <a href="/" class="btn btn-outline-secondary">back</a>
</div>
<h1 class="mb-1 restaurant-show-title">{{menu.name}}</h1>



<div class="detailPage">
  <div class="container">
    <div class="row">
      <div class="col-12 col-md-10 mx-auto">


        <div class="d-flex justify-content-end mt-4">
          <a class="btn btn-outline-warning" href="/menu/{{menu._id}}/edit" role="button">Edit</a>

          <form action="/menu/{{menu._id}}/?_method=DELETE" method="POST" style="display:inline-block">
            <button type="submit" class="btn btn-light"><i class="fas fa-trash-alt"
                onClick="alert('確定刪除\n{{menu.name}}')"></i>
            </button>
          </form>
        </div>


        <p class="mb-1">
          <span class="text-secondary">
            <i class="fas fa-utensils pr-2"></i>
            類別：
          </span>
          {{menu.category}}
        </p>

        <p class="mb-1">
          <span class="text-secondary">
            <i class="fas fa-map-marker-alt pr-2"></i>
            地址：
          </span>
          {{menu.location}}
          <a href="{{menu.google_map}}" class="text-secondary" target="_blank">
            <i class="fas fa-location-arrow pr-2 fa-xs"></i>
          </a>
        </p>

        <p class="mb-1">
          <span class="text-secondary">
            <i class="fas fa-mobile-alt pr-2"></i>
            電話：
          </span>
          {{menu.phone}}
        </p>

        <p class="m-5">
          {{menu.description}}
        </p>
        <div class="d-flex justify-content-center align-items-center mb-5 menuPic">
          <img class="showPic" src=" {{menu.image}}" alt=" {{menu.name}}" style="max-width: 600px;">
        </div>
      </div>
    </div>
  </div>
</div>