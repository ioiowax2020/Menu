<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search">
        <h4 class="mb-2">尋找餐廳：</h4>
        <div class="input-group">
          <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..."
            value="{{keyword}}" aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- restaurant list -->

<div class="container mt-5" id="mainId">
  <div>
    <a class="btn btn-outline-dark btn-lg mb-5" href="./menu/new" role="button">Add <i class="fas fa-plus"></i></a>
    <a href="/" class="btn btn-outline-secondary" style="float: right;">HOME</a>
  </div>
  <!-- dropdown -->
  <div class="d-flex justify-content-end mb-3">

    <form action="/sort" method="GET">
      <select name="sortList" id="sortList" class="btn btn-secondary" style="position: static;">
        <option value="0">SORT</option>
        <option value="1">評分高 > 低</option>
        <option value="2">餐廳類型</option>
      </select>
      <button type="submit">確定</button>
    </form>
  </div>


  <div class="row">
    {{#each menus}}
    <div class="col-sm-6 col-md-4 col-12">
      <div class="card-columns">
        <a href="/menu/{{this._id}}/detail" class="text-secondary" style="text-decoration:none;">
          <div class="card mb-3">
            <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
            <div class="card-body p-3">
              <h6 class="card-title mb-1">{{this.name}}</h6>

              <div class="restaurant-category mb-1">
                <i class="fas fa-utensils pr-2"></i> {{this.category}}
                <span class="rating">
                  {{this.rating}}
                  <i class="fas fa-star"></i>
                </span>
              </div>

              <div class="d-flex justify-content-between">
                <a class="btn btn-danger" href="./menu/{{this._id}}/detail" role="button">Detail</a>

                <a class="btn btn-primary" href="./menu/{{this._id}}/edit" role="button">Edit</a>

                <form action="./menu/{{this._id}}/delete" method="POST" style="display:inline-block">
                  <button type="submit" class="btn btn-light ml-2"><i class="fas fa-trash-alt"
                      onclick="window.alert('確認刪除您的名單');"></i></button>
                </form>
              </div>
            </div>
          </div>
        </a>
      </div>
    </div>
    {{/each}}
  </div>
</div>