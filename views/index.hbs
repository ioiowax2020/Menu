<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search" method="GET">
        <h4 class="mb-2">尋找餐廳：</h4>
        <div class="input-group">
          <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..."
            value="{{keyword}}" aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- restaurant list -->

<div class="container mt-5" id="mainId">
  <div>
    <a class="btn btn-outline-dark btn-lg mb-5" href="./menu/new" role="button">Add <i class="fas fa-plus"></i></a>
    <a href="/" class="btn btn-outline-secondary" style="float: right;">HOME</a>
  </div>
  <!-- dropdown -->
  <div class="d-flex justify-content-end mb-3">

    <form action="/sort" method="GET">
      <select name="sortList" id="sortList" class="btn btn-secondary" style="position: static;">
        <option value="0">SORT</option>
        <option value="1">評分高 ~ 低</option>
        <option value="2">A~Z</option>
      </select>
      <button type="submit" class="btn btn-primary">確定</button>
    </form>
  </div>


  <div class="row">
    {{#each menus}}
    <div class="col-sm-6 col-md-4 col-12">
      <a href="/menu/{{this._id}}" class="text-secondary" style="text-decoration:none;">
        <div class="card mb-3">
          <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
          <div class="card-body p-3">
            <h6 class="card-title mb-1">{{this.name}}</h6>

            <div class="restaurant-category mb-1">
              <i class="fas fa-utensils pr-2"></i> {{this.category}}
              <span class="badge rounded-pill bg-danger">
                {{this.rating}}
                <i class="fas fa-star"></i>
              </span>
            </div>

            <div class="d-flex justify-content-between mt-4">
              <a class="btn btn-outline-info" href="./menu/{{this._id}}" role="button">Detail</a>

              <a class="btn btn-outline-warning" href="./menu/{{this._id}}/edit" role="button">Edit</a>

              <form action="./menu/{{this._id}}/?_method=DELETE" method="POST" style="display:inline-block">
                <button type="submit" class="btn btn-light ml-2"><i class="fas fa-trash-alt"
                    onclick="alert('確定刪除\n{{this.name}}')"></i></button>
              </form>
            </div>
          </div>
        </div>
      </a>

    </div>
    {{/each}}
  </div>
</div>